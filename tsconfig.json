{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/renderer/*"
      ],
      "@Pages/*": ["./src/renderer/pages/*"],
      "@Components/*": ["./src/renderer/components/*"],
      "@Types/*": ["./src/types/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
