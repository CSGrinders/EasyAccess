{
  "compilerOptions": {
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "@Types/*": ["./src/types/*"],
      "@Pages/*": ["./src/renderer/pages/*"],
      "@Components/*": ["./src/renderer/components/*"],
    },
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/main"],
  "exclude": ["node_modules"]
}
