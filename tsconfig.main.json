{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@Types/*": ["./src/types/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/main"],
  "exclude": ["node_modules"]
}
